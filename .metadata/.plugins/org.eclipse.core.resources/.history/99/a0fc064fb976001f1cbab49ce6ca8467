public class StudentValidator {

	public StudentValidator() {}
	
//	Field : studentId
//	Value : 2017199083
//	
//	Field : name
//	Value : 하승우
//
//	Field : major
//	Value : 나노과학공학과
//	
//	Field : phoneNumber
//	Value : 010-8255-3057

	
	public void validate(Map<String, String> requestParams) {
		
		int idx = 0;
		String[] columns = new String[requestParams.size()];		
		
		for (String field : requestParams.keySet()) {
			columns[idx++] = field;
		}
		
		List<Student> currentRecords = new QueryBuilder(Student.class).select(columns).getAll();
		
//		return true;
	}
	
	private boolean validateStudentId() {
		
		return true;
	}
	
	private boolean validateName() {
		
		return true;
	}
	
	private boolean validateMajor() {
		
		return true;
	}
	
	private boolean validatePhoneNumber() {
		
		return true;
	}
}
